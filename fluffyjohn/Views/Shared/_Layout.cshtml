<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] &mdash; FluffyJohn</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fluffyjohn.styles.css" asp-append-version="true" />

    <style>
        @@font-face {
            font-family: "Krona One";
            src: url("../../wwwroot/fonts/KronaOne-Regular.ttf") format("truetype");
        }

        @@font-face {
            font-family: "Plus Jakarta Sans";
            src: url("../../wwwroot/fonts/PlusJakartaSans-VariableFont_wght.ttf") format("truetype");
        }
        .fj-title {
            font-family: "Krona One", sans-serif !important;
        }

        body {
            font-family: "Plus Jakarta Sans", 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark fluffyjohn-bg slight-dark box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fj-title" asp-area="" asp-controller="Home" asp-action="Index">FluffyJohn</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="nav navbar-nav navbar-">
                        <li class="nav-item"><a class="nav-link" href="~/viewfiles/">My Files</a></li>
                        <li class="nav-item"><a class="nav-link" href="~/help">Help</a></li>
                        <li class="nav-item"><a class="nav-link" href="https://github.com/johnmanjohnston/fluffyjohn" target="_blank">Source</a></li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted slight-dark">
        <div class="container text-center">
            FluffyJohn, programmed by <a target="_blank" href="https://github.com/johnmanjohnston">Ethan John</a> is free and open source, available <a target="_blank" href="https://github.com/johnmanjohnston/fluffyjohn/">here</a>.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
